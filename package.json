{
  "name": "@splish-me/serverless-package-registry",
  "version": "0.0.0-development",
  "bugs": {
    "url": "https://github.com/splish-me/serverless-package-registry/issues"
  },
  "main": "dist/index.js",
  "author": "Splish UG (haftungsbeschr√§nkt)",
  "contributors": ["Jonas Keinholz <jonas@keinholz.com>"],
  "license": "MIT",
  "repository": "git@github.com:splish-me/serverless-package-registry.git",
  "scripts": {
    "build": "tsc",
    "commit": "git-cz",
    "format": "splish-scripts format",
    "lint": "tslint \"src/**/*.ts\"",
    "prebuild": "rimraf dist",
    "semantic-release":
      "semantic-release pre && npm publish && semantic-release post",
    "test": "jest"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "semver": "^5.4.1"
  },
  "devDependencies": {
    "@splish-me/scripts": "^1.0.3",
    "@types/jest": "^21.1.4",
    "@types/semver": "^5.4.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "jest": "^21.2.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^8.2.0",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.5.3",
    "unexpected": "^10.36.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  }
}
